generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id                     String              @id @default(cuid())
  createdAt              DateTime            @default(now())
  guestId                String?             @unique
  walletAddress          String?             @unique
  walletVerifiedAt       DateTime?
  inviteCode             String?             @unique
  gachaTickets           Int                 @default(3)
  totalLikesUsed         Int                 @default(0)
  ornamentBalance        Int                 @default(0)
  lastOrnamentAttachedAt DateTime?
  referredById           String?             @unique
  characterReports       CharacterReport[]
  likes                  Like[]
  ornaments              Ornament[]
  ornamentAudits         OrnamentAudit[]
  ornamentMintQueues     OrnamentMintQueue[]
  payments               Payment[]
  referralsSent          Referral[]          @relation("Referrer")
  rewards                Reward[]
  rewardClaims           RewardClaim[]
  trees                  Tree[]
  referredBy             Referral?           @relation("Referred", fields: [referredById], references: [id])
}

model Tree {
  id                String           @id @default(cuid())
  onchainTreeId     BigInt?          @unique
  ownerId           String
  background        String
  shape             String
  status            TreeStatus       @default(DRAFT)
  likeCount         Int              @default(0)
  completedAt       DateTime?
  createdAt         DateTime         @default(now())
  shareCode         String?          @unique
  metadataUri       String?
  characterReportId String?
  sloganId          Int?
  sloganCustom      String?
  pinnedOrnamentIds Json?
  likes             Like[]
  ornaments         Ornament[]
  ornamentAudits    OrnamentAudit[]
  referrals         Referral[]
  characterReport   CharacterReport? @relation(fields: [characterReportId], references: [id])
  owner             User             @relation(fields: [ownerId], references: [id])
}

model Ornament {
  id        String          @id @default(cuid())
  treeId    String
  ownerId   String
  type      OrnamentType
  imageUrl  String
  slotIndex Int
  createdAt DateTime        @default(now())
  tagId     Int?
  tagText   String?
  owner     User            @relation(fields: [ownerId], references: [id])
  tree      Tree            @relation(fields: [treeId], references: [id])
  audits    OrnamentAudit[]

  @@unique([treeId, slotIndex])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  treeId    String
  createdAt DateTime @default(now())
  tree      Tree     @relation(fields: [treeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, treeId])
}

model Referral {
  id           String   @id @default(cuid())
  referrerId   String
  createdAt    DateTime @default(now())
  code         String   @unique
  treeId       String?
  referrer     User     @relation("Referrer", fields: [referrerId], references: [id])
  tree         Tree?    @relation(fields: [treeId], references: [id])
  referredUser User?    @relation("Referred")
}

model Reward {
  id        String        @id @default(cuid())
  userId    String
  amount    String
  claimed   Boolean       @default(false)
  createdAt DateTime      @default(now())
  user      User          @relation(fields: [userId], references: [id])
  claims    RewardClaim[]
}

model Payment {
  id                String          @id @default(cuid())
  userId            String
  amountCents       Int
  currency          String          @default("USD")
  paymentType       PaymentType
  provider          String          @default("internal")
  providerPaymentId String?
  status            PaymentStatus   @default(PENDING)
  metadata          Json?
  createdAt         DateTime        @default(now())
  ornamentAudits    OrnamentAudit[]
  user              User            @relation(fields: [userId], references: [id])
}

model OrnamentAudit {
  id         String            @id @default(cuid())
  ornamentId String?
  treeId     String?
  actorId    String
  action     OrnamentAuditType
  paymentId  String?
  detail     Json?
  createdAt  DateTime          @default(now())
  actor      User              @relation(fields: [actorId], references: [id])
  ornament   Ornament?         @relation(fields: [ornamentId], references: [id])
  payment    Payment?          @relation(fields: [paymentId], references: [id])
  tree       Tree?             @relation(fields: [treeId], references: [id])
}

model RewardClaim {
  id        String      @id @default(cuid())
  rewardId  String
  userId    String
  wallet    String
  txHash    String?
  claimedAt DateTime    @default(now())
  status    ClaimStatus @default(PENDING)
  reward    Reward      @relation(fields: [rewardId], references: [id])
  user      User        @relation(fields: [userId], references: [id])
}

model CharacterReport {
  id            String   @id @default(cuid())
  userId        String?
  walletAddress String
  characterType String
  emoji         String?
  label         String?
  description   String?
  metrics       Json?
  issuedYear    Int?
  createdAt     DateTime @default(now())
  user          User?    @relation(fields: [userId], references: [id])
  trees         Tree[]
}

model OrnamentMintQueue {
  id            String             @id @default(cuid())
  userId        String
  walletAddress String
  tokenId       Int
  amount        Int                @default(1)
  status        OrnamentMintStatus @default(PENDING)
  error         String?
  txHash        String?
  ornamentId    String?
  imageUrl      String?
  metadataUri   String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  processedAt   DateTime?
  user          User               @relation(fields: [userId], references: [id])
}

enum TreeStatus {
  DRAFT
  COMPLETED
}

enum OrnamentType {
  FREE_GACHA
  PAID_UPLOAD
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum PaymentType {
  GACHA_TICKET_PURCHASE
  PREMIUM_UPLOAD
  ORNAMENT_DELETE
  DIRECT_TOP_UP
}

enum OrnamentAuditType {
  CREATED_FREE_GACHA
  CREATED_PAID_UPLOAD
  DELETED_BY_OWNER
  DELETED_BY_ADMIN
}

enum ClaimStatus {
  PENDING
  SUCCESS
  FAILED
}

enum OrnamentMintStatus {
  PENDING
  PROCESSING
  SENT
  FAILED
}
